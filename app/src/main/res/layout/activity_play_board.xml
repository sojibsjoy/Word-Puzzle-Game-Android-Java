<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".PlayBoard">

<!--    Top Bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/pink"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scoreView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="6/0"
            android:textSize="16sp"
            android:background="@drawable/text_view_circle"
            android:textColor="@color/white"
            android:layout_marginStart="60dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageView
                android:contentDescription="Clock"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/time" />

            <TextView
                android:id="@+id/timeView"
                android:layout_width="80sp"
                android:layout_height="50sp"
                android:text="00:00"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/pauseIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="60dp"
            android:clickable="true"
            android:contentDescription="Pause/Play"
            android:focusable="true"
            android:onClick="pauseView"
            android:src="@drawable/pause" />



    </LinearLayout>

<!--    Word List Bar-->
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/deep_curve_design"
        android:gravity="center"
        android:orientation="vertical"
        >
<!--1st Word Row-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:id="@+id/word1"
                android:background="@drawable/word_text_view"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PANEL"
                android:textSize="16sp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/word2"
                android:background="@drawable/word_text_view"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PANEL"
                android:textSize="16sp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/word3"
                android:background="@drawable/word_text_view"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PANEL"
                android:textSize="16sp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/word4"
                android:background="@drawable/word_text_view"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PANEL"
                android:textSize="16sp"
                android:textColor="@color/white"
                />


        </LinearLayout>

<!--2nd Word Row-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >

            <TextView
                android:id="@+id/word5"
                android:background="@drawable/word_text_view"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PANEL"
                android:textSize="16sp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/word6"
                android:background="@drawable/word_text_view"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PANEL"
                android:textSize="16sp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/word7"
                android:background="@drawable/word_text_view"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PANEL"
                android:textSize="16sp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/word8"
                android:background="@drawable/word_text_view"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PANEL"
                android:textSize="16sp"
                android:textColor="@color/white"
                />


        </LinearLayout>



    </LinearLayout>

<!--    middle controller-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center">

        <ImageView
            android:contentDescription="Backspace"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="backSpace"
            android:src="@drawable/back"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tempWord"
            android:background="@drawable/word_text_view"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Start typing"
            android:textSize="18sp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:textColor="@color/white"
            />
        <ImageView
            android:contentDescription="Reset"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/restore"
            android:focusable="true"
            android:clickable="true"
            android:onClick="tempWordReset"/>

    </LinearLayout>

<!--    letters Board-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/deep_curve_design"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:gravity="center"
        >
        <GridLayout
            android:id="@+id/letterGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="5"
            android:rowCount="5">


        </GridLayout>

    </LinearLayout>

<!--    Bottom Bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_layout_design"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/helpIcon"
            android:contentDescription="Backspace"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="helpIcon"
            android:src="@drawable/help"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/hintIcon"
            android:contentDescription="Hint Icon"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:focusable="true"
            android:clickable="true"
            android:onClick="hintIcon"
            android:src="@drawable/idea"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:padding="10dp"

            />

        <ImageView
            android:id="@+id/settingsIcon"
            android:contentDescription="Reset"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/settings"
            android:focusable="true"
            android:clickable="true"
            android:onClick="settingsIcon"/>

    </LinearLayout>


</LinearLayout>
